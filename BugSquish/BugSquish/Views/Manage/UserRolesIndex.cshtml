@model IEnumerable<BugSquish.Models.ManageRolesViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <!--Table of users w/ roles-->
<div class="c-block" id="responsiveTable">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Role</th>
                    <th>Username</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {

                    <tr>                        
                        <td>@user.FirstName </td>
                        <td>@user.LastName</td>
                        <td>@user.Role</td>                        
                        <td>@user.UserName</td>
                        @if(user.Role != "Admin")
                        {
                            <td>@Html.ActionLink("Edit Role", "UserRolesDetail", "Manage", new { id = user.Id }, new { @class = "btn btn-xs btn-info" })</td>

                        }
                    </tr>
                }                
            </tbody>
        </table>
    </div>
</div>

