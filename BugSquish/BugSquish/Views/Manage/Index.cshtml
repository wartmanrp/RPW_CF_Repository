@model BugSquish.Models.IndexViewModel
@{
    ViewBag.Title = "Manage Profile";
}

<h2>@ViewBag.Title.</h2>


<h4>Edit or Change your account settings</h4>
<hr />

<div class="form-columned"> 
    <div class="row">
        <div class="form-group col-lg-offset-1 col-lg-6">
            <span class="control-label">Password:</span>
            @Html.ActionLink("Change your password", "ChangePassword")
        </div>

        <div class="form-group col-lg-offset-1 col-lg-6">
            <span class="control-label">External Logins:</span>
            @Model.Logins.Count()
            @Html.ActionLink("Manage", "ManageLogins")
        </div>

        <div class="form-group col-lg-offset-1 col-lg-6">
            @Html.ActionLink("Back to Update Profile", "Edit", "Manage", null, new { @class = "btn btn-info" })
            @Html.ActionLink("Back to Dashboard", "Index", "Home", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div>
