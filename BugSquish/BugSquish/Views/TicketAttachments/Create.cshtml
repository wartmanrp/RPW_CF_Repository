@model BugSquish.Models.TicketAttachment

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<div class="row">
    <div class="row">
        <div class="col-md-offset-1 col-md-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>TicketAttachment</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model=>model.AuthorId)
                    @Html.HiddenFor(model=> model.TicketId)


                    <div class="form-group">
                        <div class="col-md-2 control-label">
                            <b>Upload Attachments:</b>
                        </div>
                        <div class="col-md-10">
                            @*@Html.EditorFor(model => model.AttachmentUrl, new { @class = "form-control", id = "fileUpload", type= "file"})*@
                            <input name="fileUpload" type="file" class="form-control" id="fileUpload" />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            @Html.ActionLink("Back to Ticket", "Details", "Tickets", new { id = Model.TicketId }, new { @class = "btn btn-info"})
                        </div>
                    </div>
                </div>
            }

            <div>
            </div>
        </div>
    </div>
</div>




