@model CFBudgeter.Models.Transaction

@{
    ViewBag.Title = "Edit";
}

<div id="content-header">
    <h1>Edit</h1>

</div>

<div id="content-container">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Transaction</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
