@model CFBudgeter.Models.Category

@{
    ViewBag.Title = "Delete";
}

<div id="content-header">
    <h1>Delete Category (Irreversible)</h1>
</div>
<div id="content-container">
    <h3 class="text-warning">Are you sure you want to delete this?</h3>

    <div class="row">
        <div class="col-md-6 col-sm-6">

            <div class="list-group">

                <div class="list-group-item">
                    <h4 class="list-group-item-heading">@Html.DisplayFor(model => model.Name)</h4>
                    <p class="list-group-item-text">Category Name</p>
                </div>
                <div class="list-group-item">
                        <h4 class="list-group-item-heading">@Html.DisplayFor(model => model.BudgetItems.Count)</h4>
                        <p class="list-group-item-text">Budget Items Using this Category (will be deleted)</p>
                    </div>
                <div class="list-group-item">
                    <h4 class="list-group-item-heading">@Html.DisplayFor(model => model.Transactions.Count)</h4>
                    <p class="list-group-item-text">Transactions Using this Category (will be deleted)</p>
                </div>
            </div> <!-- /.list-group -->
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete Category" class="btn btn-danger" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                </div>
            }
        </div>
    </div>
</div>



    





