@model IEnumerable<CFBudgeter.Models.Category>

@{
    ViewBag.Title = "Index";
}

<div id="content-header">
    <h1>Index</h1>
</div>

<div id="content-container">
    <div class="row">
        <div class="col-md-6">
            <div class="portlet">
                <div class="portlet-header">
                    <h3>
                        <i class="fa fa-book"></i>
                        Categories
                    </h3>
                    <ul class="portlet-tools pull-right">
                        <li>
                            @Html.ActionLink("New Category", "Create", null, new { @class = "btn btn-sm btn-success" })
                        </li>
                    </ul>
                </div> <!-- /.portlet-header -->

                <div class="portlet-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover"
                               data-provide="datatable"
                               data-display-rows="12"
                               data-paginate="true"
                               data-info="true">
                            <thead>
                                <tr>
                                    <th>
                                        Category Name
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-xs btn-tertiary" })
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-xs btn-info" })
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-xs btn-danger" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div> <!-- /.table-responsive -->
                </div> <!-- /.portlet-content -->
            </div>
        </div>
    </div>
</div>

