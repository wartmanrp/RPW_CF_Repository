@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CFBudgeter.Models.EditProfileViewModel

@{
    ViewBag.Title = "Edit Profile";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div id="content-header">
        <h1>@Model.FirstName @Model.LastName</h1>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
    
    <div id="content-container">
        <div class="form-horizontal">
            @Html.HiddenFor(model => model.HouseholdId)
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger", @value = Model.UserName })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @value = Model.Email } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger", @value = Model.FirstName })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @value = Model.LastName } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>




            <div class="form-group">
                <div class="col-md-offset-2 col-md-4">
                    <input type="submit" value="Save" class="btn btn-success" />
                    @Html.ActionLink("Back to Dashboard", "Index", "Home", null, new { @class = "btn btn-default" })
                    @Html.ActionLink("Edit Password", "Index", "Manage", null, new { @class = "btn btn-info pull-right"})
                </div>
            </div>
        </div>
    </div>


}



