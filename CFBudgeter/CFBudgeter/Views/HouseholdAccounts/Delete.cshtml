@model CFBudgeter.Models.Account

@{
    ViewBag.Title = "Delete";
}

<div id="content-header">
    <h1>Delete</h1>
</div>

<div id="content-container">
    <h3>Are you sure you want to delete this Account?</h3>
    
    <div class="row">
        <div class="col-md-6 col-sm-6">

            <div class="list-group">

                <div class="list-group-item">
                    <h4 class="list-group-item-heading">@Html.DisplayFor(model => model.Name)</h4>
                    <p class="list-group-item-text">@Html.DisplayNameFor(model => model.Name)</p>
                </div>

                <div class="list-group-item">
                    <h4 class="list-group-item-heading">@Html.DisplayFor(model => model.CreationDate)</h4>
                    <p class="list-group-item-text">@Html.DisplayNameFor(model => model.CreationDate)</p>
                </div>

                <div class="list-group-item">
                    <h4 class="list-group-item-heading">@Html.DisplayFor(model => model.Balance)</h4>
                    <p class="list-group-item-text">@Html.DisplayNameFor(model => model.Balance)</p>
                </div>

                <div class="list-group-item">
                    <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.ReconciledBalance)</h4>
                    <p class="list-group-item-text">@Html.DisplayFor(model => model.ReconciledBalance)</p>
                </div>
            </div> <!-- /.list-group -->

            <br />
        </div>
    </div>
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions col-md-offset-2 col-md-4">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default"})
            </div>
        }
    </div>  
</div>

