@model CFBudgeter.Models.Account

@{
    ViewBag.Title = "Details";
}

<div id="content-header">
    <h1>Details and Transactions</h1>
</div>

<div id="content-container">
    <h4>Account</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Account Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Balance)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Balance)
        </dd>

        <dt>
            Reconciled Balance
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReconciledBalance)
        </dd>

    </dl>


    <div class="row">
        <div class="col-md-12">
            <div class="portlet">
                <div class="portlet-header">

                    <h3>
                        <i class="fa fa-table"></i>
                        Transactions
                    </h3>

                    <ul class="portlet-tools pull-right">
                        <li>
                            @Html.ActionLink("New Transaction", "Create", "Transactions", new { id = Model.Id }, new { @class = "btn btn-default" })
                        </li>
                    </ul>

                </div> <!-- /.portlet-header -->

                <div class="portlet-content">

                    <div class="table-responsive">

                        <table class="table table-striped table-bordered table-hover table-highlight table-checkable"
                               data-provide="datatable"
                               data-display-rows="10"
                               data-info="true"
                               data-search="true"
                               data-length-change="true"
                               data-paginate="true">
                            <thead>
                                <tr>
                                    <th class="checkbox-column">
                                        <input type="checkbox" class="icheck-input">
                                    </th>
                                    <th data-filterable="true" data-sortable="true" data-direction="desc">Description</th>
                                    <th data-filterable="true" data-sortable="true">Amount</th>
                                    <th data-filterable="true" data-sortable="true" class="hidden-xs hidden-sm">User</th>
                                    <th data-filterable="true" data-sortable="true" class="hidden-xs hidden-sm">Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var transaction in Model.Transactions)
                                {
                                    <tr>
                                        <td class="checkbox-column">
                                            <input type="checkbox" class="icheck-input">
                                        </td>
                                        <td>@transaction.Descriptions</td>
                                        <td>@transaction.Amount</td>
                                        <td class="hidden-xs hidden-sm">@transaction.User.FirstName</td>
                                        <td class="hidden-xs hidden-sm">@transaction.Date</td>
                                    </tr>
                                }
                                

                            </tbody>
                        </table>
                    </div> <!-- /.table-responsive -->
                </div> <!-- /.portlet-content -->
            </div> <!-- /.portlet -->



        </div> <!-- /.col -->

    </div> <!-- /.row -->




    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>

