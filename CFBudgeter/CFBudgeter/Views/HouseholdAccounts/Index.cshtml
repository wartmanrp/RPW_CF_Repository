@model IEnumerable<CFBudgeter.Models.Account>

@{
    ViewBag.Title = "Index";
}

<div id="content-header">
    <h1>Index</h1>
</div>

<div id="content-container">
<div class="portlet">
    <div class="portlet-header">
        <h3>
            <i class="fa fa-money"></i>
            Accounts
        </h3>
        <ul class="portlet-tools pull-right">
            <li>
                @Html.ActionLink("New Account", "Create", null, new { @class = "btn btn-sm btn-default" })
            </li>
        </ul>

    </div> <!-- /.portlet-header -->

    <div class="portlet-content">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreationDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Balance)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ReconciledBalance)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreationDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Balance)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReconciledBalance)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-xs btn-tertiary" })
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-xs btn-tertiary" })                               
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-xs btn-tertiary" })
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div> <!-- /.table-responsive -->
        </div> <!-- /.portlet-content -->
    </div>
</div>


          

