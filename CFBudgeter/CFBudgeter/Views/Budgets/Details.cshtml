@model CFBudgeter.Models.Budget

@{
    ViewBag.Title = "Details";
}

<div id="content-header">
    <h1>@Model.Name Details</h1>
</div>
<div id="content-container">

    <div class="row">
        <div class="col-md-6">
            <div class="portlet">
                <div class="portlet-header">
                    <h3>
                        <i class="fa fa-tag"></i>
                        Budget Items
                    </h3>
                    <ul class="portlet-tools pull-right">
                        <li>
                            @Html.ActionLink("New Budget Item", "Create", "BudgetItems", new { id = Model.Id }, new { @class = "btn btn-sm btn-success" })
                        </li>
                    </ul>
                </div> <!-- /.portlet-header -->
                <div class="portlet-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover"
                               data-provide="datatable"
                               data-display-rows="12"
                               data-paginate="true"
                               data-info="true">
                            <thead>
                                <tr>
                                    <th>
                                        Budget Item Name
                                    </th>
                                    <th>
                                        Amount
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var budgetItem in Model.BudgetItems)
                                {
                                    <tr>
                                        <td>
                                            @budgetItem.Category
                                        </td>
                                        <td>
                                            @budgetItem.Amount
                                        </td>
                                        <td>
                                            @Html.ActionLink("Details", "Details", new { id = budgetItem.Id }, new { @class = "btn btn-xs btn-tertiary" })
                                            @Html.ActionLink("Edit", "Edit", new { id = budgetItem.Id }, new { @class = "btn btn-xs btn-info" })
                                            @Html.ActionLink("Delete", "Delete", new { id = budgetItem.Id }, new { @class = "btn btn-xs btn-danger" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div> <!-- /.table-responsive -->
                </div> <!-- /.portlet-content -->
            </div>
        </div>
    </div>



    <div>
        <h4>Budget</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Household.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Household.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>


