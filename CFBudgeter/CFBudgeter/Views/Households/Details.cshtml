                </li>
            </ul>

        </div> <!-- /.portlet-header -->
        
        <div class="portlet-content">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>Email</th>
                        <th>Recent Transactions</th>
                    </tr>
                </thead>
                <tbody id="3">
                    @foreach (var member in Model.Members)
                    {
                        <tr>
                            <td>@member.FirstName @member.LastName</td>
                            <td>@member.Email</td>
                            <td>
                                @Html.ActionLink("Accounts", "Index", "HouseholdAccounts", null, new { @class = "btn btn-xs btn-tertiary" })
                                @Html.ActionLink("Budgets", "Index", "Budgets", null, new { @class = "btn btn-xs btn-tertiary"})
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-info"})
        @Html.ActionLink("Back to Dashboard", "Index", "Home", null, new { @class = "btn btn-default"})
    </p>
