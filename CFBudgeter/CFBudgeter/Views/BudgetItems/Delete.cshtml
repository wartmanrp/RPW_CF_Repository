@model CFBudgeter.Models.BudgetItem

@{
    ViewBag.Title = "Delete";
}

<div id="content-header">
    <h1>Delete Budget Item (Irreversible)</h1>
</div>

<div id="content-container">
    <h3 class="text-warning">Are you sure you want to delete this Budget Item?</h3>

    <div class="row">
        <div class="col-md-6 col-sm-6">

            <div class="list-group">

                <div class="list-group-item">
                    <h4 class="list-group-item-heading">@Html.DisplayFor(model => model.Budget.Name)</h4>
                    <p class="list-group-item-text">Budget Name</p>
                </div>

                <div class="list-group-item">
                    <h4 class="list-group-item-heading">@Html.DisplayFor(model => model.Category.Name)</h4>
                    <p class="list-group-item-text">@Html.DisplayNameFor(model => model.Category)</p>
                </div>

                <div class="list-group-item">
                    <h4 class="list-group-item-heading">$@Html.DisplayFor(model => model.Amount)</h4>
                    <p class="list-group-item-text">@Html.DisplayNameFor(model => model.Amount)</p>
                </div>

            </div> <!-- /.list-group -->
        </div>
    </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete Budget Item" class="btn btn-danger" />
                @Html.ActionLink("Back to Budget", "Details", "Budgets", new { id = Model.BudgetId }, new { @class = "btn btn-default"})
            </div>
        }
    </div>

